{
    "name": "jabber",
    "version": "1.0.0",
    "description": "A twitter clone (TBD)",
    "main": "server/dist/server.js",
    "scripts": {
        "monitor_server": "concurrently --kill-others-on-fail \"tsc -w --project server/tsconfig.json\" \"nodemon server/dist/server.js\"",
        "webpack_dev": "webpack-dev-server --mode=development --open --hot",
        "dev_start": "concurrently --kill-others-on-fail \"npm run monitor_server\" \"npm run webpack_dev\"",
        "test": "env NODE_ENV=test mocha --exit",
        "sass": "sass src/sass:src/css --watch --no-source-map",
        "build_server": "rm -rf server/dist/ && tsc --project server/tsconfig.json",
        "build_client": "webpack --mode development",
        "build": "concurrently \"npm run build_client\" \"npm run build_server\"",
        "start": "node server/dist/server.js"
    },
    "author": "Hanson Zhao",
    "license": "ISC",
    "dependencies": {
        "@emotion/react": "^11.4.1",
        "@emotion/styled": "^11.3.0",
        "@mui/icons-material": "^5.0.1",
        "@mui/material": "^5.0.1",
        "@mui/styles": "^5.0.1",
        "@popperjs/core": "^2.9.3",
        "@types/express-session": "^1.17.4",
        "bcrypt": "^5.0.1",
        "body-parser": "^1.19.0",
        "bootstrap": "^5.1.0",
        "chai": "^4.3.4",
        "chai-http": "^4.3.0",
        "connect-mongo": "^4.6.0",
        "cookie-parser": "^1.4.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-session": "^1.17.2",
        "mocha": "^9.1.2",
        "mongoose": "^6.0.5",
        "morgan": "^1.10.0",
        "passport": "^0.5.0",
        "passport-local": "^1.0.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^5.2.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.15.0",
        "@types/bcrypt": "^5.0.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.7.1",
        "@types/passport": "^1.0.7",
        "@types/react": "^17.0.24",
        "@types/react-dom": "^17.0.9",
        "@types/react-router-dom": "^5.1.8",
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "@typescript-eslint/parser": "^4.29.3",
        "babel-loader": "^8.2.2",
        "concurrently": "^6.2.1",
        "cors": "^2.8.5",
        "css-loader": "^6.2.0",
        "eslint": "^7.32.0",
        "eslint-config-google": "^0.14.0",
        "eslint-plugin-react": "^7.24.0",
        "html-webpack-plugin": "^5.3.2",
        "nodemon": "^2.0.12",
        "sass": "^1.38.1",
        "style-loader": "^3.2.1",
        "ts-loader": "^9.2.5",
        "ts-node": "^10.2.1",
