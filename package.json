{
    "name": "jabber",
    "version": "1.0.0",
    "description": "A twitter clone (TBD)",
    "main": "dist/index.js",
    "scripts": {
        "monitor_server": "nodemon server/dist/server.js",
        "webpack_dev": "webpack-dev-server --mode=development --open --hot",
        "dev_start": "concurrently --kill-others \"npm run webpack_dev\" \"npm run monitor_server\"",
        "test": "echo \"Error: no test specified\" && exit 1",
        "sass": "sass src/sass:src/css --watch --no-source-map",
        "build_server": "tsc --project server/tsconfig.json",
        "build_client": "webpack --mode production",
        "build": "concurrently \"npm run build_client\" \"npm run build_server\"",
        "start": "node server/dist/server.js"
    },
